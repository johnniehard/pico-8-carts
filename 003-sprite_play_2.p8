pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
x=64 y=64
v={} v.x=0 v.y=0

jumping=false
t=0
tstart=t
ystart=y
function _update()
	-- reset
	v.x = 0
	v.y = 0
	
	-- buttons
 if(btn(0)) v.x=-1
 if(btn(1)) v.x=1
 if(btn(2)) jump()
 
 -- update
 t+=1
 x+=v.x
 
 if (jumping) then
 	y = ystart - cos(t-tstart) * 10
 	
 	if(y < ystart-100) then
 		jumping=false
 		y = ystart
 	end
 end
end

function jump()
 jumping=true
 tstart = t
 ystart = y
end

function _draw()
	cls()

	if (v.x<0)	then
		spr(x%2,x,y,1,1,true)
	elseif (v.x>0) then
		spr(x%2,x,y)
	else
		spr(2,x,y)
	end
	
end

